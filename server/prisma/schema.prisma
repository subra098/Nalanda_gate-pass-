datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  STUDENT          @map("student")
  HOSTEL_ATTENDANT @map("hostel_attendant")
  SUPERINTENDENT   @map("superintendent")
  SECURITY_GUARD   @map("security_guard")
}

enum PassStatus {
  PENDING                 @map("pending")
  ATTENDANT_APPROVED      @map("attendant_approved")
  SUPERINTENDENT_APPROVED @map("superintendent_approved")
  REJECTED                @map("rejected")
  EXITED                  @map("exited")
  ENTERED                 @map("entered")
  OVERDUE                 @map("overdue")
}

enum DestinationType {
  CHANDAKA    @map("chandaka")
  BHUBANESWAR @map("bhubaneswar")
  HOME_OTHER  @map("home_other")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  fullName      String    @map("full_name")
  role          Role
  hostel        String?
  rollNo        String?   @map("roll_no")
  parentContact String?   @map("parent_contact")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  gatepasses           Gatepass[]
  securityScanLogs     ScanLog[] @relation("SecurityGuardScans")

  @@map("users")
}

model Gatepass {
  id                 String          @id @default(uuid())
  studentId          String          @map("student_id")
  student            User            @relation(fields: [studentId], references: [id])
  destinationType    DestinationType @map("destination_type")
  destinationDetails String          @map("destination_details")
  reason             String
  expectedReturnAt   DateTime        @map("expected_return_at")
  status             PassStatus      @default(PENDING)
  qrCodeData         String?         @map("qr_code_data")
  parentConfirmed    Boolean?        @default(false) @map("parent_confirmed")
  attendantId        String?         @map("attendant_id")
  superintendentId   String?         @map("superintendent_id")
  attendantNotes     String?         @map("attendant_notes")
  superintendentNotes String?        @map("superintendent_notes")
  
  createdAt          DateTime        @default(now()) @map("created_at")
  updatedAt          DateTime        @updatedAt @map("updated_at")

  scanLogs           ScanLog[]
  extensionRequests  ExtensionRequest[]

  @@map("gatepasses")
}

model ExtensionRequest {
  id                  String   @id @default(uuid())
  gatepassId          String   @map("gatepass_id")
  gatepass            Gatepass @relation(fields: [gatepassId], references: [id])
  newExpectedReturnAt DateTime @map("new_expected_return_at")
  reason              String
  status              String   @default("PENDING")
  superintendentNotes String?  @map("superintendent_notes")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  @@map("extension_requests")
}

model ScanLog {
  id              String   @id @default(uuid())
  gatepassId      String   @map("gatepass_id")
  gatepass        Gatepass @relation(fields: [gatepassId], references: [id])
  securityGuardId String   @map("security_guard_id")
  securityGuard   User     @relation("SecurityGuardScans", fields: [securityGuardId], references: [id])
  action          String   // "ENTRY" or "EXIT"
  notes           String?
  timestamp       DateTime @default(now())

  @@map("gate_logs")
}
