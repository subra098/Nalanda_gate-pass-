datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  STUDENT          @map("student")
  HOSTEL_ATTENDANT @map("hostel_attendant")
  SUPERINTENDENT   @map("superintendent")
  SECURITY_GUARD   @map("security_guard")
  ADMIN            @map("admin")
}

enum PassStatus {
  PENDING                 @map("pending")
  ATTENDANT_APPROVED      @map("attendant_approved")
  SUPERINTENDENT_APPROVED @map("superintendent_approved")
  REJECTED                @map("rejected")
  EXITED                  @map("exited")
  ENTERED                 @map("entered")
  OVERDUE                 @map("overdue")
}

enum DestinationType {
  CHANDAKA    @map("chandaka")
  BHUBANESWAR @map("bhubaneswar")
  HOME_OTHER  @map("home_other")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  fullName      String    @map("full_name")
  role          Role
  hostel        String?
  rollNo        String?   @map("roll_no")
  parentContact String?   @map("parent_contact")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  chandakaPasses       ChandakaPass[]
  bhubaneswarPasses    BhubaneswarPass[]
  homePasses           HomePass[]
  securityScanLogs     ScanLog[] @relation("SecurityGuardScans")

  @@map("users")
}

model ChandakaPass {
  id                 String          @id @default(uuid())
  studentId          String          @map("student_id")
  student            User            @relation(fields: [studentId], references: [id])
  studentName        String?         @map("student_name")
  destinationDetails String          @map("destination_details")
  reason             String
  expectedReturnAt   DateTime        @map("expected_return_at")
  status             PassStatus      @default(PENDING)
  qrCodeData         String?         @map("qr_code_data")
  attendantId        String?         @map("attendant_id")
  superintendentId   String?         @map("superintendent_id")
  attendantNotes     String?         @map("attendant_notes")
  superintendentNotes String?        @map("superintendent_notes")
  
  createdAt          DateTime        @default(now()) @map("created_at")
  updatedAt          DateTime        @updatedAt @map("updated_at")

  scanLogs           ScanLog[]
  extensionRequests  ExtensionRequest[]

  @@map("chandaka_passes")
}

model BhubaneswarPass {
  id                 String          @id @default(uuid())
  studentId          String          @map("student_id")
  student            User            @relation(fields: [studentId], references: [id])
  studentName        String?         @map("student_name")
  destinationDetails String          @map("destination_details")
  reason             String
  expectedReturnAt   DateTime        @map("expected_return_at")
  status             PassStatus      @default(PENDING)
  qrCodeData         String?         @map("qr_code_data")
  attendantId        String?         @map("attendant_id")
  superintendentId   String?         @map("superintendent_id")
  attendantNotes     String?         @map("attendant_notes")
  superintendentNotes String?        @map("superintendent_notes")
  
  createdAt          DateTime        @default(now()) @map("created_at")
  updatedAt          DateTime        @updatedAt @map("updated_at")

  scanLogs           ScanLog[]
  extensionRequests  ExtensionRequest[]

  @@map("bhubaneswar_passes")
}

model HomePass {
  id                 String          @id @default(uuid())
  studentId          String          @map("student_id")
  student            User            @relation(fields: [studentId], references: [id])
  studentName        String?         @map("student_name")
  
  // Home-specific fields from Leave Application
  roomNo             String          @map("room_no")
  branch             String
  semester           String
  section            String
  purpose            String          @map("reason")
  fromDate           DateTime        @map("from_date")
  expectedReturnAt   DateTime        @map("expected_return_at")
  destinationAddress String          @map("destination_address")
  meansOfTravel      String          @map("means_of_travel")
  localGuardianName  String?         @map("local_guardian_name")
  localGuardianContact String?       @map("local_guardian_contact")
  parentName         String?         @map("parent_name")
  
  status             PassStatus      @default(PENDING)
  qrCodeData         String?         @map("qr_code_data")
  attendantId        String?         @map("attendant_id")
  superintendentId   String?         @map("superintendent_id")
  attendantNotes     String?         @map("attendant_notes")
  superintendentNotes String?        @map("superintendent_notes")
  
  createdAt          DateTime        @default(now()) @map("created_at")
  updatedAt          DateTime        @updatedAt @map("updated_at")

  scanLogs           ScanLog[]
  extensionRequests  ExtensionRequest[]

  @@map("home_passes")
}

model ScanLog {
  id              String   @id @default(uuid())
  
  chandakaPassId  String?  @map("chandaka_pass_id")
  chandakaPass    ChandakaPass? @relation(fields: [chandakaPassId], references: [id])
  
  bhubaneswarPassId String? @map("bhubaneswar_pass_id")
  bhubaneswarPass   BhubaneswarPass? @relation(fields: [bhubaneswarPassId], references: [id])
  
  homePassId      String?  @map("home_pass_id")
  homePass        HomePass? @relation(fields: [homePassId], references: [id])
  
  securityGuardId String   @map("security_guard_id")
  securityGuard   User     @relation("SecurityGuardScans", fields: [securityGuardId], references: [id])
  action          String   // "ENTRY" or "EXIT"
  notes           String?
  timestamp       DateTime @default(now())

  @@map("gate_logs")
}

enum ExtensionStatus {
  PENDING  @map("pending")
  APPROVED @map("approved")
  REJECTED @map("rejected")
}

model ExtensionRequest {
  id                    String          @id @default(uuid())
  
  chandakaPassId        String?         @map("chandaka_pass_id")
  chandakaPass          ChandakaPass?   @relation(fields: [chandakaPassId], references: [id])
  
  bhubaneswarPassId     String?         @map("bhubaneswar_pass_id")
  bhubaneswarPass       BhubaneswarPass? @relation(fields: [bhubaneswarPassId], references: [id])
  
  homePassId            String?         @map("home_pass_id")
  homePass              HomePass?       @relation(fields: [homePassId], references: [id])
  
  reason                String
  newExpectedReturnAt   DateTime        @map("new_expected_return_at")
  status                ExtensionStatus @default(PENDING)
  reviewedBy            String?         @map("reviewed_by")
  reviewNotes           String?         @map("review_notes")
  
  createdAt             DateTime        @default(now()) @map("created_at")
  updatedAt             DateTime        @updatedAt @map("updated_at")

  @@map("extension_requests")
}
